<configuration>
	<appender name="GENERAL" class="ch.qos.logback.core.FileAppender">
	  <file>log/general.log</file>
	  <append>true</append>
	  <encoder>
	    <pattern>%date [%thread] %-5level %logger{35} - %msg%n</pattern>
	  </encoder>
	</appender>
	
	<appender name="IRC" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		  <fileNamePattern>log/irc/scala@freenode.net-%d{yyyy-MM-dd}.log</fileNamePattern>
		  <maxHistory>30</maxHistory>
		</rollingPolicy>
	  <encoder>
      <pattern>[%date{HH:mm:ss}] %msg%n</pattern>
    </encoder>
  </appender>

	<logger name="co.torri.scalafns.logger">
		<level value="INFO"/>
		<appender-ref ref="IRC" />
	</logger>

  <root level="INFO">
    <appender-ref ref="GENERAL" />
  </root>

</configuration>